<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to clients_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            Clients
          <% end %>
        </li>
        <li>
          <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </li>
        <li>
          <span class="text-sm font-medium text-gray-900"><%= @client.name %></span>
        </li>
      </ol>
    </nav>

    <!-- Header Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-6">
      <div class="p-6 sm:p-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div class="flex items-start space-x-4">
            <!-- Avatar -->
            <div class="flex-shrink-0">
              <div class="h-20 w-20 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg ring-4 ring-white">
                <span class="text-white font-bold text-2xl">
                  <%= @client.name.split(' ').map(&:first).join.upcase[0..1] %>
                </span>
              </div>
            </div>

            <!-- Client Info -->
            <div class="flex-1 min-w-0">
              <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2"><%= @client.name %></h1>
              <div class="flex flex-wrap items-center gap-4 text-sm">
                <div class="flex items-center text-gray-600">
                  <svg class="h-4 w-4 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <a href="tel:<%= @client.phone %>" class="hover:text-indigo-600"><%= @client.phone %></a>
                </div>
                <% if @client.email.present? %>
                  <div class="flex items-center text-gray-600">
                    <svg class="h-4 w-4 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <a href="mailto:<%= @client.email %>" class="hover:text-indigo-600"><%= @client.email %></a>
                  </div>
                <% end %>
                <% if @client.preferred_language %>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700 border border-indigo-200">
                    <%= @client.preferred_language.upcase %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-3">
            <%= link_to new_lead_path(client_id: @client.id), class: "inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              New Lead
            <% end %>
            <%= link_to edit_client_path(@client), class: "inline-flex items-center justify-center px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Metrics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-6">
      <!-- Active Leads -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-blue-200 transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-2">Active Leads</p>
            <p class="text-3xl font-bold text-gray-900"><%= @client.active_leads.count %></p>
          </div>
          <div class="flex-shrink-0">
            <div class="p-3 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl shadow-md">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Bookings -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-green-200 transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-2">Total Bookings</p>
            <p class="text-3xl font-bold text-gray-900"><%= @client.lifetime_bookings_count %></p>
          </div>
          <div class="flex-shrink-0">
            <div class="p-3 bg-gradient-to-br from-green-400 to-green-600 rounded-xl shadow-md">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Lifetime Revenue -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-yellow-200 transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-2">Lifetime Revenue</p>
            <p class="text-3xl font-bold text-gray-900">
              <% if @client.lifetime_revenue > 0 %>
                <%= number_to_currency(@client.lifetime_revenue, precision: 0) %>
              <% else %>
                <span class="text-gray-400">$0</span>
              <% end %>
            </p>
          </div>
          <div class="flex-shrink-0">
            <div class="p-3 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-xl shadow-md">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs Content -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <!-- Tabs Navigation -->
      <div class="border-b border-gray-200 bg-gray-50">
        <nav class="-mb-px flex space-x-6 px-6" aria-label="Tabs">
          <button type="button" data-tab="leads" class="tab-button active border-b-2 border-indigo-600 text-indigo-600 whitespace-nowrap py-4 px-1 font-medium text-sm transition-colors">
            Leads (<%= @client.leads.count %>)
          </button>
          <button type="button" data-tab="bookings" class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 font-medium text-sm transition-colors">
            Bookings (<%= @client.bookings.count %>)
          </button>
          <button type="button" data-tab="communications" class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 font-medium text-sm transition-colors">
            Communications (<%= @client.communications.count %>)
          </button>
        </nav>
      </div>

      <!-- Tab Content -->
      <div class="p-6">
        <!-- Leads Tab -->
        <div id="leads-tab" class="tab-content">
          <% if @client.leads.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead>
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Agent</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tour Interest</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% @client.leads.order(created_at: :desc).each do |lead| %>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <%= status_badge(lead.status) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= lead.source.titleize %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= lead.assigned_agent&.name || '-' %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= lead.tour_interest&.name || '-' %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= lead.created_at.strftime('%b %d, %Y') %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <%= link_to "View", lead, class: "text-indigo-600 hover:text-indigo-900" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-20">
              <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-50 to-indigo-50 mb-5 shadow-sm">
                <svg class="h-10 w-10 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">No leads yet</h3>
              <p class="text-sm text-gray-500 mb-6 max-w-sm mx-auto">Create a lead to start tracking this client's interests.</p>
              <%= link_to new_lead_path(client_id: @client.id), class: "inline-flex items-center px-5 py-2.5 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                New Lead
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Bookings Tab -->
        <div id="bookings-tab" class="tab-content hidden">
          <% if @client.bookings.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead>
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tour</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% @client.bookings.order(created_at: :desc).each do |booking| %>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="font-mono text-sm font-medium text-gray-900"><%= booking.reference_number %></span>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-900"><%= booking.tour_departure.tour.name %></td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <%= booking_status_badge(booking.status) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= booking.num_participants %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                        <%= number_to_currency(booking.total_amount, unit: booking.currency, precision: 0) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= booking.created_at.strftime('%b %d, %Y') %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <%= link_to "View", booking, class: "text-indigo-600 hover:text-indigo-900" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-20">
              <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-green-50 to-emerald-50 mb-5 shadow-sm">
                <svg class="h-10 w-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">No bookings yet</h3>
              <p class="text-sm text-gray-500 max-w-sm mx-auto">This client hasn't made any bookings.</p>
            </div>
          <% end %>
        </div>

        <!-- Communications Tab -->
        <div id="communications-tab" class="tab-content hidden">
          <% if @client.communications.any? %>
            <div class="flow-root">
              <ul class="-mb-8">
                <% @client.communications.order(created_at: :desc).limit(20).each_with_index do |comm, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == [@client.communications.count - 1, 19].min %>
                        <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex items-start space-x-3">
                        <div>
                          <div class="relative px-1">
                            <div class="h-10 w-10 bg-<%= comm.direction == 'inbound' ? 'blue' : 'green' %>-100 rounded-full ring-8 ring-white flex items-center justify-center">
                              <% if comm.communication_type == 'whatsapp' %>
                                <svg class="h-5 w-5 text-<%= comm.direction == 'inbound' ? 'blue' : 'green' %>-600" fill="currentColor" viewBox="0 0 24 24">
                                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                                </svg>
                              <% else %>
                                <svg class="h-5 w-5 text-<%= comm.direction == 'inbound' ? 'blue' : 'green' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="min-w-0 flex-1">
                          <div>
                            <div class="text-sm">
                              <span class="font-medium text-gray-900">
                                <%= comm.direction == 'inbound' ? @client.name : 'Agent' %>
                              </span>
                              <span class="text-gray-500">
                                â€¢ <%= comm.communication_type.titleize %>
                              </span>
                            </div>
                            <p class="mt-0.5 text-xs text-gray-500">
                              <%= time_ago_in_words(comm.created_at) %> ago
                            </p>
                          </div>
                          <div class="mt-2 text-sm text-gray-700 bg-gray-50 rounded-lg p-3">
                            <p><%= comm.body %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
            <% if @client.communications.count > 20 %>
              <div class="mt-6 text-center border-t border-gray-200 pt-4">
                <p class="text-sm text-gray-500">Showing last 20 communications</p>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-20">
              <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-50 to-pink-50 mb-5 shadow-sm">
                <svg class="h-10 w-10 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">No communications yet</h3>
              <p class="text-sm text-gray-500 max-w-sm mx-auto">Communication history will appear here.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Simple Tab Switching Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');

        // Remove active class from all buttons
        tabButtons.forEach(btn => {
          btn.classList.remove('active', 'border-indigo-600', 'text-indigo-600');
          btn.classList.add('border-transparent', 'text-gray-500');
        });

        // Add active class to clicked button
        this.classList.add('active', 'border-indigo-600', 'text-indigo-600');
        this.classList.remove('border-transparent', 'text-gray-500');

        // Hide all tab contents
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });

        // Show selected tab content
        document.getElementById(tabName + '-tab').classList.remove('hidden');
      });
    });
  });
</script>
