<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Clients</h1>
      <p class="mt-2 text-sm text-gray-700">
        Manage all customers and their lifetime relationships
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_client_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Client
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: clients_path, method: :get, class: "space-y-4 sm:space-y-0 sm:flex sm:items-end sm:gap-4" do |f| %>
      <!-- Search -->
      <div class="flex-1">
        <%= f.label :search, t('common.search'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Name, phone, or email...",
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Language Filter -->
      <div>
        <%= f.label :language, "Language", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :language,
          options_for_select([['All Languages', ''], ['English', 'en'], ['Russian', 'ru']], params[:language]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Active Leads Filter -->
      <div>
        <%= f.label :active_leads, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :active_leads,
          options_for_select([['All Clients', ''], ['With Active Leads', 'true']], params[:active_leads]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Has Bookings Filter -->
      <div>
        <%= f.label :has_bookings, "Bookings", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :has_bookings,
          options_for_select([['All', ''], ['Has Bookings', 'true']], params[:has_bookings]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Buttons -->
      <div class="flex gap-2">
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Clear", clients_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Clients</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @clients.total_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">With Active Leads</div>
      <div class="mt-1 text-3xl font-semibold text-indigo-600">
        <%= Client.joins(:leads).where.not(leads: { status: ['won', 'lost'] }).distinct.count %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Returning Customers</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= Client.joins(:leads).group('clients.id').having('COUNT(leads.id) > 1').count.length %>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <% if @clients.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Language</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activity</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @clients.each do |client| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                        <span class="text-indigo-700 font-semibold text-sm">
                          <%= client.name.split(' ').map(&:first).join.upcase[0..1] %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to client.name, client, class: "hover:text-indigo-600" %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <% if client.leads.count > 1 %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                            ðŸ”„ Returning
                          </span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= client.phone %></div>
                  <div class="text-sm text-gray-500"><%= client.email %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if client.preferred_language %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%= client.preferred_language.upcase %>
                    </span>
                  <% else %>
                    <span class="text-gray-400 text-sm">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <div><%= pluralize(client.leads.count, 'lead') %></div>
                  <div><%= pluralize(client.bookings.count, 'booking') %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% revenue = client.lifetime_revenue %>
                  <% if revenue > 0 %>
                    <span class="font-semibold"><%= number_to_currency(revenue, precision: 0) %></span>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to "View", client, class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Edit", edit_client_path(client), class: "text-gray-600 hover:text-gray-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @clients.total_pages > 1 %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <%= paginate @clients, theme: 'twitter-bootstrap-4',
            class: "flex justify-center" %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No clients found</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? || params[:language].present? %>
            Try adjusting your filters
          <% else %>
            Get started by creating a new client
          <% end %>
        </p>
        <div class="mt-6">
          <%= link_to new_client_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Client
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
