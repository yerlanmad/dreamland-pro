<%= form_with(model: client, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if client.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= t('clients.form.errors', count: client.errors.count) %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Form Card -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <!-- Contact Information Section -->
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
      <h3 class="text-lg font-medium text-gray-900"><%= t('clients.form.contact_information') %></h3>
      <p class="mt-1 text-sm text-gray-600"><%= t('clients.form.contact_information_help') %></p>
    </div>

    <div class="px-6 py-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- Name -->
        <div>
          <%= form.label :name, t('clients.form.name_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name,
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: t('clients.form.name_placeholder') %>
          <p class="mt-1 text-xs text-gray-500"><%= t('clients.form.name_help') %></p>
        </div>

        <!-- Phone -->
        <div>
          <%= form.label :phone, t('clients.form.phone_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.telephone_field :phone,
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: t('clients.form.phone_placeholder') %>
          <p class="mt-1 text-xs text-gray-500"><%= t('clients.form.phone_help') %></p>
        </div>

        <!-- Email -->
        <div>
          <%= form.label :email, t('clients.form.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: t('clients.form.email_placeholder') %>
          <p class="mt-1 text-xs text-gray-500"><%= t('clients.form.email_help') %></p>
        </div>

        <!-- Preferred Language -->
        <div>
          <%= form.label :preferred_language, t('clients.form.preferred_language_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :preferred_language,
              [[t('languages.en'), 'en'], [t('languages.ru'), 'ru']],
              { include_blank: t('clients.form.select_language_prompt') },
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500"><%= t('clients.form.preferred_language_help') %></p>
        </div>
      </div>
    </div>

    <!-- Notes Section -->
    <div class="px-6 py-5 border-t border-b border-gray-200 bg-gray-50">
      <h3 class="text-base font-medium text-gray-900"><%= t('clients.form.internal_notes') %></h3>
      <p class="mt-1 text-sm text-gray-600"><%= t('clients.form.internal_notes_help') %></p>
    </div>

    <div class="px-6 py-6">
      <%= form.label :notes, t('clients.form.notes_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :notes,
          rows: 4,
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
          placeholder: t('clients.form.notes_placeholder') %>
      <p class="mt-2 text-xs text-gray-500"><%= t('clients.form.notes_help') %></p>
    </div>

    <!-- Form Actions -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-end space-x-3">
      <%= link_to t('common.cancel'), client.persisted? ? client_path(client) : clients_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      <%= form.submit (client.persisted? ? t('clients.form.update_client') : t('clients.form.create_client')), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
    </div>
  </div>
<% end %>
