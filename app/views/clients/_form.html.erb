<%= form_with(model: client, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if client.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Form Card -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <!-- Contact Information Section -->
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
      <h3 class="text-lg font-medium text-gray-900">Contact Information</h3>
      <p class="mt-1 text-sm text-gray-600">Basic details for client identification</p>
    </div>

    <div class="px-6 py-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name,
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Full name" %>
          <p class="mt-1 text-xs text-gray-500">Client's full name</p>
        </div>

        <!-- Phone -->
        <div>
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.telephone_field :phone,
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "+1234567890" %>
          <p class="mt-1 text-xs text-gray-500">Include country code (e.g., +1, +7, +77)</p>
        </div>

        <!-- Email -->
        <div>
          <%= form.label :email, "Email (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "email@example.com" %>
          <p class="mt-1 text-xs text-gray-500">Optional</p>
        </div>

        <!-- Preferred Language -->
        <div>
          <%= form.label :preferred_language, "Preferred Language", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :preferred_language,
              [['English', 'en'], ['Russian', 'ru']],
              { include_blank: 'Select language...' },
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">For communications and templates</p>
        </div>
      </div>
    </div>

    <!-- Notes Section -->
    <div class="px-6 py-5 border-t border-b border-gray-200 bg-gray-50">
      <h3 class="text-base font-medium text-gray-900">Internal Notes</h3>
      <p class="mt-1 text-sm text-gray-600">Additional information about this client</p>
    </div>

    <div class="px-6 py-6">
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :notes,
          rows: 4,
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
          placeholder: "Add any notes about this client..." %>
      <p class="mt-2 text-xs text-gray-500">Internal notes (not visible to client)</p>
    </div>

    <!-- Form Actions -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-end space-x-3">
      <%= link_to "Cancel", client.persisted? ? client_path(client) : clients_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      <%= form.submit (client.persisted? ? "Update Client" : "Create Client"), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
    </div>
  </div>
<% end %>
