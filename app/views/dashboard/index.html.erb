<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('dashboard.title') %></h1>
      <p class="mt-2 text-sm text-gray-600">
        <%= t('dashboard.welcome_back') %>, <span class="font-medium text-gray-900"><%= current_user.name %></span>!
        <%= t('dashboard.whats_happening') %>
      </p>
    </div>

    <!-- Quick Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Leads -->
      <div class="bg-white overflow-hidden shadow-sm rounded-lg hover:shadow-md transition-shadow duration-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="p-3 bg-blue-50 rounded-lg">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t('dashboard.total_leads') %></dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-bold text-gray-900"><%= Lead.count %></div>
                </dd>
              </dl>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to t('dashboard.view_all_leads'), leads_path, class: "text-sm font-medium text-blue-600 hover:text-blue-700" %>
          </div>
        </div>
      </div>

      <!-- New Leads -->
      <div class="bg-white overflow-hidden shadow-sm rounded-lg hover:shadow-md transition-shadow duration-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="p-3 bg-green-50 rounded-lg">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t('dashboard.new_leads') %></dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-bold text-gray-900"><%= Lead.where(status: 'new').count %></div>
                  <% new_percentage = Lead.count > 0 ? ((Lead.where(status: 'new').count.to_f / Lead.count) * 100).round : 0 %>
                  <span class="ml-2 text-sm font-medium text-green-600"><%= new_percentage %>%</span>
                </dd>
              </dl>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to t('dashboard.view_new_leads'), leads_path(status: 'new'), class: "text-sm font-medium text-green-600 hover:text-green-700" %>
          </div>
        </div>
      </div>

      <!-- Unassigned Leads -->
      <div class="bg-white overflow-hidden shadow-sm rounded-lg hover:shadow-md transition-shadow duration-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="p-3 bg-yellow-50 rounded-lg">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t('dashboard.unassigned') %></dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-bold text-gray-900"><%= Lead.where(assigned_agent_id: nil).count %></div>
                </dd>
              </dl>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to t('dashboard.assign_leads'), leads_path(unassigned: 'true'), class: "text-sm font-medium text-yellow-600 hover:text-yellow-700" %>
          </div>
        </div>
      </div>

      <!-- Unread Messages -->
      <div class="bg-white overflow-hidden shadow-sm rounded-lg hover:shadow-md transition-shadow duration-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="p-3 bg-red-50 rounded-lg">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t('dashboard.unread_messages') %></dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-bold text-gray-900"><%= Lead.with_unread_messages.count %></div>
                </dd>
              </dl>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to t('dashboard.view_messages'), leads_path(unread: 'true'), class: "text-sm font-medium text-red-600 hover:text-red-700" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Leads -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow-sm rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900"><%= t('dashboard.recent_leads') %></h3>
              <%= link_to t('dashboard.view_all'), leads_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <% recent_leads = Lead.includes(:client, :assigned_agent).order(created_at: :desc).limit(5) %>
            <% if recent_leads.any? %>
              <% recent_leads.each do |lead| %>
                <div class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                  <%= link_to lead_path(lead), class: "block" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center min-w-0 flex-1">
                        <div class="h-10 w-10 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                          <span class="text-indigo-600 font-medium text-sm"><%= lead.client.name.split(' ').map(&:first).join.upcase[0..1] %></span>
                        </div>
                        <div class="ml-4 min-w-0 flex-1">
                          <p class="text-sm font-medium text-gray-900 truncate"><%= lead.client.name %></p>
                          <p class="text-sm text-gray-500 truncate"><%= lead.client.phone %></p>
                        </div>
                      </div>
                      <div class="ml-4 flex items-center space-x-2 flex-shrink-0">
                        <%= status_badge(lead.status) %>
                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('dashboard.no_leads_yet') %></h3>
                <p class="mt-1 text-sm text-gray-500"><%= t('dashboard.get_started') %></p>
                <div class="mt-6">
                  <%= link_to t('dashboard.new_lead_button'), new_lead_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Quick Actions & Stats -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white shadow-sm rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900"><%= t('dashboard.quick_actions') %></h3>
          </div>
          <div class="px-6 py-5 space-y-3">
            <%= link_to new_lead_path, class: "flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors duration-150" do %>
              <div class="flex-shrink-0">
                <div class="h-10 w-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                  <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-900"><%= t('dashboard.new_lead_action') %></p>
                <p class="text-xs text-gray-500"><%= t('dashboard.add_new_lead') %></p>
              </div>
            <% end %>

            <%= link_to tours_path, class: "flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors duration-150" do %>
              <div class="flex-shrink-0">
                <div class="h-10 w-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-900"><%= t('dashboard.manage_tours') %></p>
                <p class="text-xs text-gray-500"><%= t('dashboard.view_and_edit_tours') %></p>
              </div>
            <% end %>

            <%= link_to bookings_path, class: "flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors duration-150" do %>
              <div class="flex-shrink-0">
                <div class="h-10 w-10 bg-purple-100 rounded-lg flex items-center justify-center">
                  <svg class="h-5 w-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-900"><%= t('dashboard.view_bookings') %></p>
                <p class="text-xs text-gray-500"><%= t('dashboard.manage_all_bookings') %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Lead Status Breakdown -->
        <div class="bg-white shadow-sm rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900"><%= t('dashboard.lead_status') %></h3>
          </div>
          <div class="px-6 py-5">
            <dl class="space-y-3">
              <% Lead.statuses.keys.each do |status| %>
                <% count = Lead.where(status: status).count %>
                <div class="flex items-center justify-between">
                  <dt class="text-sm text-gray-600"><%= status.titleize %></dt>
                  <dd class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-900"><%= count %></span>
                    <%= status_badge(status) %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
