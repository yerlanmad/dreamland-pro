<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Tours", tours_path, class: "text-gray-500 hover:text-gray-700 transition-colors" %></li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
          <%= link_to @tour.name, tour_path(@tour), class: "text-gray-500 hover:text-gray-700 transition-colors" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
          <span class="text-gray-900 font-medium">Departures</span>
        </li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @tour.name %> - Departures</h1>
        <p class="mt-1 text-sm text-gray-500">Manage departure dates and capacity</p>
      </div>
      <%= link_to new_tour_tour_departure_path(@tour), class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition-all" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        Add Departure
      <% end %>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 p-6 mb-6">
      <%= form_with url: tour_tour_departures_path(@tour), method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
        <%= form.label :timeframe, "Timeframe", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :timeframe, options_for_select([['All', ''], ['Upcoming', 'upcoming'], ['Past', 'past']], params[:timeframe]), {}, class: "block rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <%= form.submit "Apply", class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition-all" %>
        <%= link_to "Clear", tour_tour_departures_path(@tour), class: "inline-flex items-center px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all" %>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-6 mb-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-600 mb-1">Total Departures</p>
        <p class="text-3xl font-bold text-gray-900"><%= @stats[:total] %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-600 mb-1">Upcoming</p>
        <p class="text-3xl font-bold text-gray-900"><%= @stats[:upcoming] %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-600 mb-1">Total Capacity</p>
        <p class="text-3xl font-bold text-gray-900"><%= @stats[:total_capacity] %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-600 mb-1">Available Spots</p>
        <p class="text-3xl font-bold text-gray-900"><%= @stats[:available_spots] %></p>
      </div>
    </div>

    <!-- Departures Table -->
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
      <% if @tour_departures.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Capacity</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Available</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bookings</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tour_departures.each do |departure| %>
              <tr class="hover:bg-gray-50 cursor-pointer transition-colors" onclick="window.location='<%= tour_departure_path(departure) %>'">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= departure.departure_date.strftime('%b %d, %Y') %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900"><%= format_tour_price(departure.price, departure.currency) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= departure.capacity %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-900"><%= departure.available_spots %></span>
                    <div class="w-24 bg-gray-200 rounded-full h-2">
                      <div class="<%= capacity_color_class(departure.available_spots, departure.capacity) %> h-2 rounded-full" style="width: <%= capacity_percentage(departure.available_spots, departure.capacity) %>%"></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= departure.bookings.count %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= departure.full? ? departure_full_badge : departure_status_badge(departure) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"><%= link_to "View", tour_departure_path(departure), class: "text-indigo-600 hover:text-indigo-900", onclick: "event.stopPropagation()" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="px-6 py-4 border-t border-gray-200"><%= paginate @tour_departures %></div>
      <% else %>
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-50 to-pink-50 mb-5"><svg class="h-10 w-10 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg></div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">No departures found</h3>
          <p class="text-sm text-gray-500 mb-6">Add departure dates to start accepting bookings.</p>
          <%= link_to new_tour_tour_departure_path(@tour), class: "inline-flex items-center px-5 py-2.5 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-all" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
            Add Departure
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
