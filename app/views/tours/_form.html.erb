<%= form_with(model: tour, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if tour.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(tour.errors.count, "error") %> prohibited this tour from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% tour.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Form Card -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <!-- Basic Information Section -->
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
      <h3 class="text-lg font-medium text-gray-900">Basic Information</h3>
      <p class="mt-1 text-sm text-gray-600">Essential details about the tour</p>
    </div>

    <div class="px-6 py-6 space-y-6">
      <!-- Tour Name -->
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name,
            required: true,
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            placeholder: "e.g., Altai Mountains Adventure" %>
        <p class="mt-1 text-xs text-gray-500">The tour name as it will appear to customers</p>
      </div>

      <!-- Description -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description,
            rows: 4,
            required: true,
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            placeholder: "Describe what makes this tour special..." %>
        <p class="mt-1 text-xs text-gray-500">Provide a detailed description of the tour experience</p>
      </div>
    </div>

    <!-- Pricing & Duration Section -->
    <div class="px-6 py-5 border-t border-b border-gray-200 bg-gray-50">
      <h3 class="text-base font-medium text-gray-900">Pricing & Duration</h3>
      <p class="mt-1 text-sm text-gray-600">Pricing details and tour length</p>
    </div>

    <div class="px-6 py-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- Base Price -->
        <div>
          <%= form.label :base_price, t('tours.attributes.base_price'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative rounded-lg shadow-sm">
            <%= form.number_field :base_price,
                step: 0.01,
                min: 0,
                required: true,
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "0.00" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Starting price for this tour</p>
        </div>

        <!-- Currency -->
        <div>
          <%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :currency,
              [['US Dollar (USD)', 'USD'], ['Tenge (KZT)', 'KZT'], ['Euro (EUR)', 'EUR'], ['Ruble (RUB)', 'RUB']],
              { include_blank: 'Select currency...' },
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Price currency for this tour</p>
        </div>

        <!-- Duration -->
        <div class="sm:col-span-2">
          <%= form.label :duration_days, "Duration (days)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :duration_days,
              min: 1,
              required: true,
              class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "1" %>
          <p class="mt-1 text-xs text-gray-500">How many days does this tour last?</p>
        </div>
      </div>
    </div>

    <!-- Capacity & Status Section -->
    <div class="px-6 py-5 border-t border-b border-gray-200 bg-gray-50">
      <h3 class="text-base font-medium text-gray-900">Capacity & Status</h3>
      <p class="mt-1 text-sm text-gray-600">Maximum capacity and availability status</p>
    </div>

    <div class="px-6 py-6 space-y-6">
      <!-- Capacity -->
      <div>
        <%= form.label :capacity, t('tours.attributes.max_capacity'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :capacity,
            min: 1,
            required: true,
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            placeholder: "10" %>
        <p class="mt-1 text-xs text-gray-500">Maximum number of participants per tour</p>
      </div>

      <!-- Active Status -->
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :active, class: "font-medium text-gray-700" do %>
            Active
          <% end %>
          <p class="text-gray-500">When active, this tour will be available for bookings</p>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-end space-x-3">
      <%= link_to t('common.cancel'), tour.persisted? ? tour_path(tour) : tours_path, class: "inline-flex items-center px-5 py-2.5 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
      <%= form.submit (tour.persisted? ? t('tours.form.update_tour') : t('tours.form.create_tour')), class: "inline-flex items-center px-5 py-2.5 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
    </div>
  </div>
<% end %>
