<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center space-x-4 mb-4">
        <%= link_to tour_path(@tour), class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= t('tours.edit') %></h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= t('tours.edit_description', name: @tour.name) %>
          </p>
        </div>
      </div>
    </div>

    <!-- Form -->
    <%= render 'form', tour: @tour %>
  </div>
</div>
