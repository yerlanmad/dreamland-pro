<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to "Tours", tours_path, class: "text-gray-500 hover:text-gray-700 transition-colors" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-gray-900 font-medium"><%= @tour.name %></span>
        </li>
      </ol>
    </nav>

    <!-- Tour Header Card -->
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 mb-6 overflow-hidden">
      <div class="px-8 py-8">
        <div class="flex items-start justify-between gap-6">
          <div class="flex-1 min-w-0">
            <div class="flex items-center space-x-3 mb-4">
              <h1 class="text-3xl font-bold text-gray-900"><%= @tour.name %></h1>
              <%= tour_status_badge(@tour) %>
            </div>

            <div class="flex flex-wrap items-center gap-4 mb-4 text-sm">
              <span class="flex items-center text-gray-600 bg-gray-50 px-3 py-1.5 rounded-lg">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="font-semibold"><%= format_tour_price(@tour.base_price, @tour.currency) %></span>
              </span>

              <span class="flex items-center text-gray-600 bg-gray-50 px-3 py-1.5 rounded-lg">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <%= pluralize(@tour.duration_days, 'day') %>
              </span>

              <span class="flex items-center text-gray-600 bg-gray-50 px-3 py-1.5 rounded-lg">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                Up to <%= @tour.capacity %> people
              </span>
            </div>

            <% if @tour.description.present? %>
              <p class="text-gray-600 leading-relaxed"><%= @tour.description %></p>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex flex-col space-y-3 flex-shrink-0">
            <%= link_to edit_tour_path(@tour), class: "inline-flex items-center justify-center px-5 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>

            <%= button_to t('common.delete'), tour_path(@tour), method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this tour?" },
                class: "inline-flex items-center justify-center px-5 py-2.5 border border-red-300 rounded-lg shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Tour Details & Stats Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
      <!-- Quick Stats -->
      <div class="bg-white shadow-sm rounded-xl border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Stats</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between pb-3 border-b border-gray-200">
            <span class="text-sm text-gray-600">Total Departures</span>
            <span class="text-lg font-semibold text-gray-900"><%= @tour.tour_departures.count %></span>
          </div>
          <div class="flex items-center justify-between pb-3 border-b border-gray-200">
            <span class="text-sm text-gray-600">Upcoming Departures</span>
            <span class="text-lg font-semibold text-gray-900"><%= @tour.upcoming_departures.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Total Capacity</span>
            <span class="text-lg font-semibold text-gray-900"><%= @tour.capacity %> people</span>
          </div>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="lg:col-span-2 bg-white shadow-sm rounded-xl border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Tour Information</h3>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Base Price</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= format_tour_price(@tour.base_price, @tour.currency) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Currency</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @tour.currency %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Duration</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= pluralize(@tour.duration_days, 'day') %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Max Capacity</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @tour.capacity %> people</dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Upcoming Departures Section -->
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-900">Upcoming Departures</h3>
        <%= link_to new_tour_tour_departure_path(@tour), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Departure
        <% end %>
      </div>

      <% if @upcoming_departures.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Capacity</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Available</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bookings</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @upcoming_departures.each do |departure| %>
              <tr class="hover:bg-gray-50 cursor-pointer transition-colors" onclick="window.location='<%= tour_departure_path(departure) %>'">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= departure.departure_date.strftime('%b %d, %Y') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                  <%= format_tour_price(departure.price, departure.currency) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= departure.capacity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-900"><%= departure.available_spots %></span>
                    <div class="w-24 bg-gray-200 rounded-full h-2">
                      <div class="<%= capacity_color_class(departure.available_spots, departure.capacity) %> h-2 rounded-full transition-all duration-300"
                           style="width: <%= capacity_percentage(departure.available_spots, departure.capacity) %>%"></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= departure.bookings.count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if departure.full? %>
                    <%= departure_full_badge %>
                  <% else %>
                    <%= departure_status_badge(departure) %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to t('common.view'), tour_departure_path(departure), class: "text-indigo-600 hover:text-indigo-900", onclick: "event.stopPropagation()" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @tour.upcoming_departures.count > 10 %>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 text-center">
            <%= link_to "View All Departures", tour_tour_departures_path(@tour), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-50 to-pink-50 mb-5 shadow-sm">
            <svg class="h-10 w-10 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">No departures scheduled</h3>
          <p class="text-sm text-gray-500 mb-6 max-w-sm mx-auto">Add departure dates to start accepting bookings for this tour.</p>
          <%= link_to new_tour_tour_departure_path(@tour), class: "inline-flex items-center px-5 py-2.5 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Departure
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
