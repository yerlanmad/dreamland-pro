<div class="bg-white shadow-sm rounded-xl border border-gray-200">
  <%= form_with model: template, local: true, class: "space-y-6" do |f| %>
    <!-- Error Messages -->
    <% if template.errors.any? %>
      <div class="rounded-lg bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(template.errors.count, "error") %> prohibited this template from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% template.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Information -->
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
      <h3 class="text-lg font-medium text-gray-900">Template Information</h3>
      <p class="mt-1 text-sm text-gray-500">Create reusable message templates with variable substitution</p>
    </div>

    <div class="px-6 space-y-4">
      <!-- Name -->
      <div>
        <%= f.label :name, "Template Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name,
          placeholder: "e.g., 'Greeting for new leads'",
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Category -->
      <div>
        <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :category,
          [
            ['Greeting', 'greeting'],
            ['Pricing', 'pricing'],
            ['Availability', 'availability'],
            ['Confirmation', 'confirmation'],
            ['Follow-up', 'follow_up'],
            ['General', 'general']
          ],
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Content -->
      <div>
        <%= f.label :content, "Message Content", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :content,
          rows: 6,
          placeholder: "Hello {{name}}, thank you for your inquiry about {{tour_name}}...",
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm font-mono" %>
        <p class="mt-2 text-sm text-gray-500">
          Use double curly braces for variables: <code class="px-1 py-0.5 bg-gray-100 rounded">{{variable_name}}</code>
        </p>
      </div>

      <!-- Variables Info Box -->
      <div class="rounded-lg bg-blue-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-blue-800">Available Variables</h3>
            <div class="mt-2 text-sm text-blue-700">
              <ul class="list-disc pl-5 space-y-1">
                <li><code>{{name}}</code> - Client name</li>
                <li><code>{{phone}}</code> - Client phone number</li>
                <li><code>{{email}}</code> - Client email</li>
                <li><code>{{tour_name}}</code> - Tour name (if context available)</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Active -->
      <div class="flex items-center">
        <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :active, "Active (available for use)", class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="px-6 py-4 bg-gray-50 flex justify-end gap-3">
      <%= link_to "Cancel", whatsapp_templates_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit template.new_record? ? "Create Template" : "Update Template",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
