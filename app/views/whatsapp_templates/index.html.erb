<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">WhatsApp Templates</h1>
      <p class="mt-2 text-sm text-gray-700">
        Manage message templates with variable substitution
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_whatsapp_template_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" do %>
        <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Template
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: whatsapp_templates_path, method: :get, class: "flex items-end gap-4" do |f| %>
      <div class="flex-1">
        <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :category,
          options_for_select([
            ['All Categories', ''],
            ['Greeting', 'greeting'],
            ['Pricing', 'pricing'],
            ['Availability', 'availability'],
            ['Confirmation', 'confirmation'],
            ['Follow-up', 'follow_up'],
            ['General', 'general']
          ], params[:category]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" %>
        <%= link_to "Clear", whatsapp_templates_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Templates</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total] %></div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Active</div>
      <div class="mt-1 text-3xl font-semibold text-green-600"><%= @stats[:active] %></div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Categories</div>
      <div class="mt-1 text-3xl font-semibold text-indigo-600"><%= @stats[:by_category].keys.count %></div>
    </div>
  </div>

  <!-- Templates Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <% if @templates.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Variables</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @templates.each do |template| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to template.name, template, class: "hover:text-indigo-600" %>
                </div>
                <div class="text-sm text-gray-500 truncate max-w-md">
                  <%= truncate(template.content, length: 60) %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= template.category.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= template.variables.join(', ') if template.variables.any? %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if template.active? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium ring-1 ring-inset bg-green-50 text-green-700 ring-green-600/20">
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium ring-1 ring-inset bg-gray-50 text-gray-600 ring-gray-500/10">
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "View", template, class: "text-indigo-600 hover:text-indigo-900" %>
                <%= link_to "Edit", edit_whatsapp_template_path(template), class: "text-gray-600 hover:text-gray-900" %>
                <%= button_to "Toggle", toggle_active_whatsapp_template_path(template), method: :patch, class: "text-blue-600 hover:text-blue-900 inline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @templates.total_pages > 1 %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <%= paginate @templates, theme: 'twitter-bootstrap-4' %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No templates found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new message template</p>
        <div class="mt-6">
          <%= link_to new_whatsapp_template_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Template
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
