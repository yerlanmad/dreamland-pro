<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to "Templates", whatsapp_templates_path, class: "text-gray-500 hover:text-gray-700" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-gray-900 font-medium"><%= @template.name %></span>
        </li>
      </ol>
    </nav>

    <!-- Template Details Card -->
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 mb-6 overflow-hidden">
      <div class="px-8 py-8">
        <div class="flex items-start justify-between mb-6">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-2">
              <h1 class="text-3xl font-bold text-gray-900"><%= @template.name %></h1>
              <% if @template.active? %>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium ring-1 ring-inset bg-green-50 text-green-700 ring-green-600/20">
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium ring-1 ring-inset bg-gray-50 text-gray-600 ring-gray-500/10">
                  Inactive
                </span>
              <% end %>
            </div>
            <div class="flex items-center space-x-4 text-sm text-gray-500">
              <span class="flex items-center">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                <%= @template.category.humanize %>
              </span>
              <span>Created <%= time_ago_in_words(@template.created_at) %> ago</span>
            </div>
          </div>

          <div class="flex flex-col space-y-2 flex-shrink-0">
            <%= link_to edit_whatsapp_template_path(@template), class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>
            <%= button_to toggle_active_whatsapp_template_path(@template), method: :patch, class: "inline-flex items-center justify-center px-4 py-2 border border-blue-300 rounded-lg text-sm font-medium text-blue-700 bg-white hover:bg-blue-50" do %>
              <%= @template.active? ? "Deactivate" : "Activate" %>
            <% end %>
          </div>
        </div>

        <!-- Template Content -->
        <div class="bg-gray-50 rounded-lg p-6 mb-6">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Template Content</h3>
          <div class="font-mono text-sm text-gray-700 whitespace-pre-wrap bg-white rounded border border-gray-200 p-4"><%= @template.content %></div>
        </div>

        <!-- Variables -->
        <% if @template.variables.any? %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Variables</h3>
            <div class="flex flex-wrap gap-2">
              <% @template.variables.each do |variable| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  {{<%= variable %>}}
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Preview -->
        <% if @preview %>
          <div class="bg-blue-50 rounded-lg p-6">
            <h3 class="text-sm font-medium text-blue-900 mb-3">Preview (with sample data)</h3>
            <div class="text-sm text-blue-800 whitespace-pre-wrap bg-white rounded border border-blue-200 p-4"><%= @preview %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
