<div id="communication_<%= communication.id %>" class="relative flex items-start space-x-3">
  <div>
    <div class="relative px-1">
      <div class="h-8 w-8 bg-<%= communication.inbound? ? 'blue' : 'green' %>-100 rounded-full ring-8 ring-white flex items-center justify-center">
        <% if communication.type_whatsapp? %>
          <svg class="h-5 w-5 text-<%= communication.inbound? ? 'blue' : 'green' %>-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        <% elsif communication.type_email? %>
          <svg class="h-5 w-5 text-<%= communication.inbound? ? 'blue' : 'green' %>-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
  <div class="min-w-0 flex-1">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="text-sm">
          <span class="font-medium text-gray-900">
            <%= communication.inbound? ? communication.client.name : (current_user&.name || 'Agent') %>
          </span>
          <span class="text-gray-500">
            â€¢ <%= communication.communication_type.titleize %>
            â€¢ <%= communication.direction.titleize %>
          </span>
          <% if communication.deleted? %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
              Deleted
            </span>
          <% elsif communication.failed? %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
              Failed
            </span>
          <% elsif communication.pending? %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
              Pending
            </span>
          <% end %>
        </div>
        <p class="mt-0.5 text-sm text-gray-500">
          <%= time_ago_in_words(communication.created_at) %> ago
          <% if communication.sent_at && communication.sent_at != communication.created_at %>
            â€¢ Sent <%= time_ago_in_words(communication.sent_at) %> ago
          <% end %>
        </p>
      </div>

      <!-- Action buttons for outbound WhatsApp messages -->
      <% if communication.editable? || communication.deletable? %>
        <div class="ml-4 flex items-center space-x-2">
          <% if communication.editable? %>
            <%= link_to edit_communication_path(communication),
                data: { turbo_frame: "edit_communication_#{communication.id}" },
                class: "text-indigo-600 hover:text-indigo-900 text-xs font-medium" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            <% end %>
          <% end %>
          <% if communication.deletable? %>
            <%= button_to communication_path(communication),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this message?" },
                class: "text-red-600 hover:text-red-900" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= turbo_frame_tag "edit_communication_#{communication.id}" %>

    <div class="mt-2 text-sm text-gray-700">
      <% if communication.deleted? %>
        <p class="italic text-gray-500"><%= communication.body %></p>
      <% else %>
        <p class="whitespace-pre-wrap"><%= communication.body %></p>
      <% end %>
    </div>

    <% if communication.media_url.present? %>
      <div class="mt-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          ðŸ“Ž <%= communication.media_type %>
        </span>
      </div>
    <% end %>

    <% if communication.error_message.present? %>
      <div class="mt-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
          Error: <%= communication.error_message %>
        </span>
      </div>
    <% end %>
  </div>
</div>
