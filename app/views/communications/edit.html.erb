<%= turbo_frame_tag "edit_communication_#{@communication.id}" do %>
  <div class="mt-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
    <%= form_with model: @communication, method: :patch, class: "space-y-3" do |f| %>
      <div>
        <%= f.label :body, "Edit Message", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :body,
            rows: 3,
            required: true,
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">
          Note: Message editing has time limits. Some channels may not support editing.
        </p>
      </div>

      <div class="flex justify-end space-x-2">
        <%= link_to "Cancel",
            request.referer || @communication.lead || @communication.booking,
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= f.submit "Update Message",
            class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
<% end %>
