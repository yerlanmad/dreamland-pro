<% if logged_in? %>
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <!-- Left side: Logo and navigation -->
        <div class="flex">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-2" do %>
              <div class="h-8 w-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-lg">D</span>
              </div>
              <span class="text-xl font-bold text-gray-900">Dreamland PRO</span>
            <% end %>
          </div>

          <!-- Desktop navigation -->
          <div class="hidden sm:ml-8 sm:flex sm:space-x-6">
            <%= link_to "Dashboard", root_path, class: nav_link_class(root_path) %>
            <%= link_to "Leads", leads_path, class: nav_link_class(leads_path) %>
            <%= link_to "Tours", tours_path, class: nav_link_class(tours_path) %>
            <%= link_to "Bookings", bookings_path, class: nav_link_class(bookings_path) %>
          </div>
        </div>

        <!-- Right side: User menu and actions -->
        <div class="flex items-center space-x-4">
          <!-- Notifications (placeholder for future) -->
          <button type="button" class="hidden sm:block relative p-2 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md transition-colors duration-200">
            <span class="sr-only">View notifications</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
          </button>

          <!-- User info -->
          <div class="hidden sm:flex items-center space-x-3">
            <div class="flex items-center space-x-2">
              <div class="h-8 w-8 bg-indigo-100 rounded-full flex items-center justify-center">
                <span class="text-indigo-600 font-medium text-sm"><%= current_user.name.first.upcase %></span>
              </div>
              <div class="flex flex-col">
                <span class="text-sm font-medium text-gray-900"><%= current_user.name %></span>
                <span class="text-xs text-gray-500"><%= current_user.role.titleize %></span>
              </div>
            </div>
          </div>

          <!-- Logout button -->
          <%= button_to logout_path, method: :delete, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
            <svg class="h-4 w-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <span class="hidden sm:inline">Logout</span>
          <% end %>

          <!-- Mobile menu button -->
          <button type="button" class="sm:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 transition-colors duration-200"
                  onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
            <span class="sr-only">Open main menu</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="sm:hidden hidden" id="mobile-menu">
      <div class="pt-2 pb-3 space-y-1 border-t border-gray-200">
        <%= link_to "Dashboard", root_path, class: "block px-4 py-2 text-base font-medium #{current_page?(root_path) ? 'text-indigo-600 bg-indigo-50 border-l-4 border-indigo-600' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" %>
        <%= link_to "Leads", leads_path, class: "block px-4 py-2 text-base font-medium #{current_page?(leads_path) ? 'text-indigo-600 bg-indigo-50 border-l-4 border-indigo-600' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" %>
        <%= link_to "Tours", tours_path, class: "block px-4 py-2 text-base font-medium #{current_page?(tours_path) ? 'text-indigo-600 bg-indigo-50 border-l-4 border-indigo-600' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" %>
        <%= link_to "Bookings", bookings_path, class: "block px-4 py-2 text-base font-medium #{current_page?(bookings_path) ? 'text-indigo-600 bg-indigo-50 border-l-4 border-indigo-600' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" %>
      </div>
      <div class="pt-4 pb-3 border-t border-gray-200">
        <div class="flex items-center px-4">
          <div class="h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
            <span class="text-indigo-600 font-medium"><%= current_user.name.first.upcase %></span>
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-gray-900"><%= current_user.name %></div>
            <div class="text-sm font-medium text-gray-500"><%= current_user.role.titleize %></div>
          </div>
        </div>
      </div>
    </div>
  </nav>
<% end %>
