<% if flash.any? %>
  <div class="fixed top-20 right-4 z-50 space-y-3 w-full max-w-sm pointer-events-none" role="alert" aria-live="assertive">
    <% flash.each do |type, message| %>
      <% if message.present? %>
        <div class="<%= flash_class(type) %> rounded-lg shadow-xl p-4 pointer-events-auto backdrop-blur-sm"
             data-flash-message
             data-controller="flash"
             data-flash-type="<%= type %>"
             style="animation: slideIn 0.3s ease-out;">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <% if type.to_s == 'notice' || type.to_s == 'success' %>
                <div class="h-6 w-6 rounded-full bg-green-100 flex items-center justify-center">
                  <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% elsif type.to_s == 'alert' || type.to_s == 'error' %>
                <div class="h-6 w-6 rounded-full bg-red-100 flex items-center justify-center">
                  <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% elsif type.to_s == 'warning' %>
                <div class="h-6 w-6 rounded-full bg-yellow-100 flex items-center justify-center">
                  <svg class="h-4 w-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% else %>
                <div class="h-6 w-6 rounded-full bg-blue-100 flex items-center justify-center">
                  <svg class="h-4 w-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-3 flex-1 pt-0.5">
              <p class="text-sm font-medium leading-5"><%= message %></p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button type="button"
                      onclick="this.closest('[data-flash-message]').style.cssText='opacity: 0; transform: translateX(100%); transition: all 0.3s ease-out;'; setTimeout(() => this.closest('[data-flash-message]').remove(), 300);"
                      class="inline-flex rounded-md <%= type.to_s == 'notice' || type.to_s == 'success' ? 'text-green-700 hover:text-green-900' : type.to_s == 'alert' || type.to_s == 'error' ? 'text-red-700 hover:text-red-900' : type.to_s == 'warning' ? 'text-yellow-700 hover:text-yellow-900' : 'text-blue-700 hover:text-blue-900' %> focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white <%= type.to_s == 'notice' || type.to_s == 'success' ? 'focus:ring-green-500' : type.to_s == 'alert' || type.to_s == 'error' ? 'focus:ring-red-500' : type.to_s == 'warning' ? 'focus:ring-yellow-500' : 'focus:ring-blue-500' %>">
                <span class="sr-only">Dismiss</span>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <style>
    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    @keyframes slideOut {
      from {
        transform: translateX(0);
        opacity: 1;
      }
      to {
        transform: translateX(100%);
        opacity: 0;
      }
    }
  </style>

  <script>
    // Auto-dismiss flash messages after 5 seconds
    function initFlashMessages() {
      const flashMessages = document.querySelectorAll('[data-flash-message]');

      flashMessages.forEach(function(message) {
        // Only set timeout if not already set
        if (!message.dataset.timeoutSet) {
          message.dataset.timeoutSet = 'true';
          setTimeout(function() {
            message.style.cssText = 'opacity: 0; transform: translateX(100%); transition: all 0.3s ease-out;';
            setTimeout(function() {
              message.remove();
            }, 300);
          }, 5000);
        }
      });
    }

    // Initialize on page load and Turbo navigation
    document.addEventListener('DOMContentLoaded', initFlashMessages);
    document.addEventListener('turbo:load', initFlashMessages);
  </script>
<% end %>
