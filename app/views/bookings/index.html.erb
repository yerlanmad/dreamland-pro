<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Bookings</h1>
      <p class="mt-2 text-sm text-gray-700">
        Manage all tour bookings and reservations
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_booking_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Booking
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: bookings_path, method: :get, class: "space-y-4 sm:space-y-0 sm:flex sm:items-end sm:gap-4" do |f| %>
      <!-- Search -->
      <div class="flex-1">
        <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Client name or booking ID...",
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status,
          options_for_select([
            ['All Statuses', ''],
            ['Confirmed', 'confirmed'],
            ['Paid', 'paid'],
            ['Completed', 'completed'],
            ['Cancelled', 'cancelled']
          ], params[:status]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Upcoming Filter -->
      <div>
        <%= f.label :upcoming, "Date Range", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :upcoming,
          options_for_select([['All Dates', ''], ['Upcoming Only', 'true']], params[:upcoming]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Buttons -->
      <div class="flex gap-2">
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Clear", bookings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Bookings</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @bookings.total_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Confirmed</div>
      <div class="mt-1 text-3xl font-semibold text-blue-600">
        <%= Booking.where(status: :confirmed).count %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Upcoming Tours</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= Booking.upcoming.where.not(status: :cancelled).count %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Revenue</div>
      <div class="mt-1 text-2xl font-semibold text-indigo-600">
        <% total_revenue = Booking.where.not(status: :cancelled).sum(:total_amount) %>
        <%= number_to_currency(total_revenue, precision: 0) %>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <% if @bookings.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Booking</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tour</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Departure</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @bookings.each do |booking| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center">
                        <svg class="h-5 w-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to booking.reference_number, booking, class: "hover:text-indigo-600" %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= booking.created_at.strftime("%b %d, %Y") %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to booking.client_name, booking.client, class: "hover:text-indigo-600" %>
                  </div>
                  <div class="text-sm text-gray-500"><%= booking.client_phone %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= booking.tour_name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= booking.tour_departure.departure_date.strftime("%b %d, %Y") %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= booking.tour_departure.tour.duration_days %> days
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= booking.num_participants %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= number_to_currency(booking.total_amount, unit: booking.currency, precision: 0) %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= payment_status_indicator(booking) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= booking_status_badge(booking.status) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to "View", booking, class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Edit", edit_booking_path(booking), class: "text-gray-600 hover:text-gray-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @bookings.total_pages > 1 %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <%= paginate @bookings, theme: 'twitter-bootstrap-4',
            class: "flex justify-center" %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No bookings found</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? || params[:status].present? %>
            Try adjusting your filters
          <% else %>
            Get started by creating a new booking
          <% end %>
        </p>
        <div class="mt-6">
          <%= link_to new_booking_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Booking
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
