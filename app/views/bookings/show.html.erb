<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <%= link_to bookings_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Booking <%= @booking.reference_number %></h1>
          <p class="mt-1 text-sm text-gray-500">
            Created on <%= @booking.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <%= booking_status_badge(@booking.status) %>
        <%= link_to "Edit", edit_booking_path(@booking), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Client Information -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Client Information</h3>
        </div>
        <div class="px-6 py-5">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="h-16 w-16 rounded-full bg-indigo-100 flex items-center justify-center">
                <span class="text-indigo-700 font-semibold text-lg">
                  <%= @booking.client_name.split(' ').map(&:first).join.upcase[0..1] %>
                </span>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <h4 class="text-lg font-semibold text-gray-900">
                <%= link_to @booking.client_name, @booking.client, class: "hover:text-indigo-600" %>
              </h4>
              <div class="mt-2 space-y-1">
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <%= @booking.client_phone %>
                </div>
                <% if @booking.client_email.present? %>
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <%= @booking.client_email %>
                  </div>
                <% end %>
              </div>
              <% if @booking.lead.present? %>
                <div class="mt-3">
                  <span class="text-xs text-gray-500">Associated with Lead:</span>
                  <%= link_to "Lead ##{@booking.lead.id}", @booking.lead, class: "text-xs text-indigo-600 hover:text-indigo-700 ml-1" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Tour Information -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Tour Details</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Tour Name</dt>
              <dd class="mt-1 text-sm font-semibold text-gray-900"><%= @booking.tour_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Departure Date</dt>
              <dd class="mt-1 text-sm font-semibold text-gray-900">
                <%= @booking.tour_departure.departure_date.strftime("%B %d, %Y") %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Duration</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @booking.tour_departure.duration_days %> days</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Participants</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @booking.num_participants %> people</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Price per Person</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= number_to_currency(@booking.tour_departure.price, unit: @booking.currency, precision: 0) %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Total Amount</dt>
              <dd class="mt-1 text-lg font-bold text-indigo-600">
                <%= number_to_currency(@booking.total_amount, unit: @booking.currency, precision: 0) %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Payments -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">Payments</h3>
            <%= link_to "Add Payment", new_booking_payment_path(@booking), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
        <div class="px-6 py-5">
          <!-- Payment Progress -->
          <div class="mb-6">
            <div class="flex justify-between text-sm font-medium text-gray-700 mb-2">
              <span>Payment Progress</span>
              <span><%= number_to_currency(@booking.total_paid, unit: @booking.currency, precision: 0) %> of <%= number_to_currency(@booking.total_amount, unit: @booking.currency, precision: 0) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <% payment_percentage = @booking.total_amount > 0 ? ((@booking.total_paid.to_f / @booking.total_amount) * 100).round : 0 %>
              <div class="<%= @booking.fully_paid? ? 'bg-green-600' : 'bg-blue-600' %> h-3 rounded-full transition-all duration-300" style="width: <%= [payment_percentage, 100].min %>%"></div>
            </div>
            <% if @booking.outstanding_balance > 0 %>
              <p class="mt-2 text-sm text-gray-600">
                Outstanding balance: <span class="font-semibold text-red-600"><%= number_to_currency(@booking.outstanding_balance, unit: @booking.currency, precision: 0) %></span>
              </p>
            <% else %>
              <p class="mt-2 text-sm font-semibold text-green-600">✓ Fully paid</p>
            <% end %>
          </div>

          <!-- Payment List -->
          <% if @payments.any? %>
            <div class="space-y-3">
              <% @payments.each do |payment| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
                  <%= link_to payment, class: "block" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                          <div class="h-10 w-10 rounded-lg bg-green-100 flex items-center justify-center">
                            <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                          </div>
                        </div>
                        <div>
                          <p class="text-sm font-semibold text-gray-900">
                            <%= number_to_currency(payment.amount, unit: payment.currency, precision: 0) %>
                          </p>
                          <p class="text-xs text-gray-500">
                            <%= payment.payment_method.titleize %> • <%= payment.payment_date.strftime("%b %d, %Y") %>
                          </p>
                        </div>
                      </div>
                      <div>
                        <% if payment.status == 'completed' %>
                          <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Completed</span>
                        <% elsif payment.status == 'pending' %>
                          <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Pending</span>
                        <% else %>
                          <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Failed</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No payments recorded yet</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Communications -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">Communications</h3>
            <%= link_to "Send Message", new_booking_communication_path(@booking), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
        <div class="px-6 py-5">
          <% if @communications.any? %>
            <div class="flow-root">
              <ul class="-mb-8">
                <% @communications.each_with_index do |communication, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == @communications.length - 1 %>
                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-8 w-8 rounded-full <%= communication.direction == 'inbound' ? 'bg-green-100' : 'bg-blue-100' %> flex items-center justify-center ring-8 ring-white">
                            <% if communication.type == 'whatsapp' %>
                              <svg class="h-4 w-4 <%= communication.direction == 'inbound' ? 'text-green-600' : 'text-blue-600' %>" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                              </svg>
                            <% else %>
                              <svg class="h-4 w-4 <%= communication.direction == 'inbound' ? 'text-green-600' : 'text-blue-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                              </svg>
                            <% end %>
                          </span>
                        </div>
                        <div class="min-w-0 flex-1">
                          <div>
                            <div class="text-sm">
                              <span class="font-medium text-gray-900">
                                <%= communication.direction == 'inbound' ? @booking.client_name : 'Agent' %>
                              </span>
                            </div>
                            <p class="mt-0.5 text-xs text-gray-500">
                              <%= communication.created_at.strftime("%b %d, %Y at %I:%M %p") %> • <%= communication.type.titleize %>
                            </p>
                          </div>
                          <div class="mt-2 text-sm text-gray-700">
                            <%= simple_format(communication.body) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No communications yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Actions Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Actions</h3>
        </div>
        <div class="px-6 py-5 space-y-3">
          <% if @booking.status == 'confirmed' %>
            <%= button_to "Mark as Paid", confirm_booking_path(@booking), method: :patch, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700" %>
          <% end %>

          <% unless @booking.status == 'cancelled' %>
            <%= button_to "Cancel Booking", cancel_booking_path(@booking), method: :patch, data: { confirm: "Are you sure you want to cancel this booking?" }, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50" %>
          <% end %>

          <%= link_to "Edit Booking", edit_booking_path(@booking), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>

          <%= link_to "View Client", @booking.client, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>

          <% if @booking.payments.none? %>
            <%= button_to "Delete Booking", @booking, method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50" %>
          <% end %>
        </div>
      </div>

      <!-- Status History -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Booking Info</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="space-y-3">
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Status</dt>
              <dd class="mt-1"><%= booking_status_badge(@booking.status) %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @booking.created_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @booking.updated_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Currency</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @booking.currency %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
