<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to @booking, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Edit Booking <%= @booking.reference_number %></h1>
        <p class="mt-1 text-sm text-gray-500">
          Update booking details and information
        </p>
      </div>
    </div>
  </div>

  <!-- Warning if booking has payments -->
  <% if @booking.payments.any? %>
    <div class="mb-6 rounded-lg bg-yellow-50 p-4 border border-yellow-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Caution: Booking Has Payments</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>This booking has <%= pluralize(@booking.payments.count, 'payment') %>. Be careful when modifying the total amount or currency.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Form -->
  <div class="max-w-3xl">
    <%= render "form", booking: @booking %>
  </div>
</div>
