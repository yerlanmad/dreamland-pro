<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between mb-6">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900"><%= @lead.client.name %></h1>
        <div class="mt-1 flex items-center">
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= status_badge_class(@lead.status) %>">
            <%= t("leads.statuses.#{@lead.status}") %>
          </span>
          <span class="ml-2 text-sm text-gray-500">
            <%= t('leads.attributes.source') %>: <%= t("leads.sources.#{@lead.source}") %>
          </span>
          <% if @lead.unread_messages_count > 0 %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <%= @lead.unread_messages_count %> <%= t('leads.attributes.unread_messages').downcase %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
        <%= link_to t('common.edit'), edit_lead_path(@lead), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= button_to t('common.delete'), lead_path(@lead), method: :delete, data: { confirm: t('common.confirm_delete') }, class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Left Column: Lead Details & Quick Actions -->
      <div class="lg:col-span-1">
        <!-- Lead Details Card -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('leads.show.contact_information') %></h3>

            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.show.client') %></dt>
                <dd class="mt-1 text-sm">
                  <%= link_to @lead.client.name, client_path(@lead.client), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.attributes.phone') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @lead.client.phone %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.attributes.email') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @lead.client.email || '-' %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.attributes.assigned_agent') %></dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @lead.assigned_agent&.name || t('leads.show.unassigned') %>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.attributes.tour_interest') %></dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @lead.tour_interest&.name || t('leads.show.none') %>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.attributes.last_message_at') %></dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @lead.last_message_at ? time_ago_in_words(@lead.last_message_at) + ' ' + t('leads.show.ago') : t('leads.show.never') %>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('leads.show.created') %></dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= l(@lead.created_at, format: :long) %>
                </dd>
              </div>
            </dl>

            <% if @lead.has_campaign? %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-500 mb-2"><%= t('leads.show.campaign_info') %></h4>
                <dl class="space-y-2">
                  <div>
                    <dt class="text-xs text-gray-400"><%= t('leads.attributes.campaign_source') %></dt>
                    <dd class="text-sm text-gray-900">
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= campaign_badge_class(@lead.campaign_source) %>">
                        <%= t("leads.campaign_sources.#{@lead.campaign_source}") %>
                      </span>
                    </dd>
                  </div>
                  <div>
                    <dt class="text-xs text-gray-400"><%= t('leads.attributes.campaign_id') %></dt>
                    <dd class="text-sm text-gray-900 font-mono"><%= @lead.campaign_id %></dd>
                  </div>
                  <% if @lead.campaign_url.present? %>
                    <div>
                      <dt class="text-xs text-gray-400"><%= t('leads.attributes.campaign_url') %></dt>
                      <dd class="text-sm">
                        <%= link_to truncate(@lead.campaign_url, length: 40), @lead.campaign_url,
                            target: '_blank', rel: 'noopener',
                            class: 'text-indigo-600 hover:text-indigo-500' %>
                      </dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="mt-6 bg-white shadow rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('leads.show.quick_actions') %></h3>

            <div class="space-y-3">
              <!-- Assign to Agent -->
              <%= form_with url: assign_lead_path(@lead), method: :post, local: true do |form| %>
                <div>
                  <%= label_tag :agent_id, t('leads.show.assign_to_agent'), class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 flex space-x-2">
                    <%= select_tag :agent_id,
                        options_for_select(User.agents.order(:name).map { |a| [a.name, a.id] }, @lead.assigned_agent_id),
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                    <%= submit_tag t('leads.show.assign'), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  </div>
                </div>
              <% end %>

              <!-- Mark as Contacted -->
              <% if @lead.status_new? %>
                <%= button_to t('leads.show.mark_as_contacted'), mark_contacted_lead_path(@lead), method: :patch, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              <% end %>

              <!-- Mark Messages as Read -->
              <% if @lead.unread_messages_count > 0 %>
                <%= button_to "#{t('leads.show.mark_messages_read')} (#{@lead.unread_messages_count})", "#", method: :patch, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% end %>

              <!-- Convert to Booking -->
              <% if @lead.status_qualified? || @lead.status_quoted? %>
                <div class="pt-3 border-t border-gray-200">
                  <%= link_to "#", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                    <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= t('leads.show.convert_to_booking') %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Communications Timeline -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('communications.title') %></h3>

            <% if @communications.any? %>
              <div class="flow-root">
                <ul class="-mb-8">
                  <% @communications.each_with_index do |comm, index| %>
                    <li>
                      <div class="relative pb-8">
                        <% unless index == @communications.size - 1 %>
                          <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                        <% end %>
                        <div class="relative flex items-start space-x-3">
                          <div>
                            <div class="relative px-1">
                              <div class="h-8 w-8 bg-<%= comm.inbound? ? 'blue' : 'green' %>-100 rounded-full ring-8 ring-white flex items-center justify-center">
                                <% if comm.type_whatsapp? %>
                                  <svg class="h-5 w-5 text-<%= comm.inbound? ? 'blue' : 'green' %>-500" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                  </svg>
                                <% elsif comm.type_email? %>
                                  <svg class="h-5 w-5 text-<%= comm.inbound? ? 'blue' : 'green' %>-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                  </svg>
                                <% end %>
                              </div>
                            </div>
                          </div>
                          <div class="min-w-0 flex-1">
                            <div>
                              <div class="text-sm">
                                <span class="font-medium text-gray-900">
                                  <%= comm.inbound? ? @lead.client.name : (current_user.name rescue t('leads.show.agent')) %>
                                </span>
                                <span class="text-gray-500">
                                  â€¢ <%= t("communications.types.#{comm.communication_type}") %>
                                  â€¢ <%= t("communications.directions.#{comm.direction}") %>
                                </span>
                              </div>
                              <p class="mt-0.5 text-sm text-gray-500">
                                <%= time_ago_in_words(comm.created_at) %> ago
                              </p>
                            </div>
                            <div class="mt-2 text-sm text-gray-700">
                              <p class="whitespace-pre-wrap"><%= comm.body %></p>
                            </div>
                            <% if comm.media_url.present? %>
                              <div class="mt-2">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                  ðŸ“Ž <%= comm.media_type %>
                                </span>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('leads.show.no_communications') %></h3>
                <p class="mt-1 text-sm text-gray-500"><%= t('leads.show.start_conversation') %></p>
              </div>
            <% end %>

            <!-- Send Message Form -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h4 class="text-sm font-medium text-gray-900 mb-3"><%= t('leads.show.send_message') %></h4>
              <%= form_with url: lead_communications_path(@lead), method: :post, local: true, class: "space-y-3" do |f| %>
                <div>
                  <%= f.label :communication_type, t('leads.show.message_type'), class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.select :communication_type,
                      [[t('communications.types.whatsapp'), 'whatsapp'], [t('communications.types.email'), 'email']],
                      {},
                      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>

                <!-- Template Selector -->
                <div>
                  <%= f.label :template_id, t('leads.show.use_template'), class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.select :template_id,
                      options_from_collection_for_select(WhatsappTemplate.active, :id, :name),
                      { include_blank: t('leads.show.type_custom_message') },
                      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>

                <div>
                  <%= f.label :body, t('communications.attributes.body'), class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.text_area :body,
                      rows: 4,
                      required: true,
                      placeholder: t('leads.show.message_placeholder'),
                      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                  <p class="mt-1 text-xs text-gray-500">
                    <%= t('leads.show.available_variables') %>: <code class="px-1 py-0.5 bg-gray-100 rounded">{{name}}</code>, <code class="px-1 py-0.5 bg-gray-100 rounded">{{phone}}</code>
                  </p>
                </div>

                <div class="flex justify-end">
                  <%= f.submit t('leads.show.send_message_button'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Back Button -->
    <div class="mt-6">
      <%= link_to "â† #{t('leads.show.back_to_leads')}", leads_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
