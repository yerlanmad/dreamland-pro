<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900"><%= t('leads.title') %></h1>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to t('leads.new_lead'), new_lead_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <!-- Filters -->
    <div class="mt-6 bg-white shadow rounded-lg p-4">
      <%= form_with url: leads_path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
          <!-- Search -->
          <div>
            <%= label_tag :search, t('leads.search'), class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag :search, params[:search],
                placeholder: t('leads.search_placeholder'),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <!-- Status Filter -->
          <div>
            <%= label_tag :status, t('leads.status_filter'), class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :status,
                options_for_select([[t('leads.all_statuses'), '']] + Lead.statuses.keys.map { |s| [t("leads.statuses.#{s}"), s] }, params[:status]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <!-- Source Filter -->
          <div>
            <%= label_tag :source, t('leads.source_filter'), class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :source,
                options_for_select([[t('leads.all_sources'), '']] + Lead.sources.keys.map { |s| [t("leads.sources.#{s}"), s] }, params[:source]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <!-- Agent Filter -->
          <div>
            <%= label_tag :agent_id, t('leads.agent_filter'), class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :agent_id,
                options_for_select([[t('leads.all_agents'), '']] + @agents.map { |a| [a.name, a.id] }, params[:agent_id]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <!-- Campaign Filter -->
          <div>
            <%= label_tag :campaign_source, t('leads.campaign_filter'), class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :campaign_source,
                options_for_select(
                  [[t('leads.all_campaigns'), '']] +
                  Lead.campaign_sources.keys.map { |s| [t("leads.campaign_sources.#{s}"), s] } +
                  [[t('leads.no_campaign'), 'none']],
                  params[:campaign_source]
                ),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center space-x-4">
          <!-- Checkbox Filters -->
          <div class="flex items-center">
            <%= check_box_tag :unassigned, 'true', params[:unassigned] == 'true', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= label_tag :unassigned, t('leads.unassigned_only'), class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="flex items-center">
            <%= check_box_tag :unread, 'true', params[:unread] == 'true', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= label_tag :unread, t('leads.unread_messages_only'), class: "ml-2 text-sm text-gray-700" %>
          </div>

          <!-- Filter Buttons -->
          <div class="flex-1 flex justify-end space-x-2">
            <%= submit_tag t('leads.apply_filters'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= link_to t('leads.clear_filters'), leads_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="mt-6 grid grid-cols-1 gap-5 sm:grid-cols-4">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate"><%= t('leads.total') %></dt>
              <dd class="text-lg font-semibold text-gray-900"><%= Lead.count %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate"><%= t('leads.new_status') %></dt>
              <dd class="text-lg font-semibold text-gray-900"><%= Lead.status_new.count %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate"><%= t('leads.unassigned_stats') %></dt>
              <dd class="text-lg font-semibold text-gray-900"><%= Lead.unassigned.count %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate"><%= t('leads.unread_stats') %></dt>
              <dd class="text-lg font-semibold text-gray-900"><%= Lead.with_unread_messages.count %></dd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Leads Table -->
    <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.client_name') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.contact') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.attributes.status') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.attributes.source') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.attributes.campaign') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.agent') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.attributes.tour_interest') %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('leads.attributes.unread_messages') %>
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only"><%= t('common.actions') %></span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @leads.each do |lead| %>
            <tr class="hover:bg-gray-50 cursor-pointer transition-colors" onclick="window.location='<%= lead_path(lead) %>'">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= lead.client.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= lead.client.phone %></div>
                <div class="text-sm text-gray-500"><%= lead.client.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(lead.status) %>">
                  <%= t("leads.statuses.#{lead.status}") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= t("leads.sources.#{lead.source}") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if lead.has_campaign? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= campaign_badge_class(lead.campaign_source) %>">
                    <%= t("leads.campaign_sources.#{lead.campaign_source}") %>
                  </span>
                  <% if lead.campaign_id.present? %>
                    <span class="text-gray-400 ml-1 text-xs"><%= truncate(lead.campaign_id, length: 12) %></span>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= lead.assigned_agent&.name || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= lead.tour_interest&.name || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if lead.unread_messages_count > 0 %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= lead.unread_messages_count %>
                  </span>
                <% else %>
                  <span class="text-sm text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to t('common.view'), lead, class: "text-indigo-600 hover:text-indigo-900", onclick: "event.stopPropagation()" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @leads.empty? %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('leads.no_leads_found') %></h3>
          <p class="mt-1 text-sm text-gray-500"><%= t('leads.get_started_or_adjust') %></p>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="mt-6">
      <%= paginate @leads %>
    </div>
  </div>
</div>
