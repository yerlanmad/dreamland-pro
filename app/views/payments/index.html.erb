<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payments</h1>
      <p class="mt-2 text-sm text-gray-700">
        Track and manage all payment transactions
      </p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: payments_path, method: :get, class: "space-y-4 sm:space-y-0 sm:flex sm:items-end sm:gap-4" do |f| %>
      <!-- Search -->
      <div class="flex-1">
        <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Client name...",
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status,
          options_for_select([
            ['All Statuses', ''],
            ['Completed', 'completed'],
            ['Pending', 'pending'],
            ['Failed', 'failed'],
            ['Refunded', 'refunded']
          ], params[:status]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Payment Method Filter -->
      <div>
        <%= f.label :payment_method, "Method", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :payment_method,
          options_for_select([
            ['All Methods', ''],
            ['Cash', 'cash'],
            ['Bank Transfer', 'bank_transfer'],
            ['Credit Card', 'credit_card'],
            ['Online', 'online']
          ], params[:payment_method]),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Buttons -->
      <div class="flex gap-2">
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Clear", payments_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Payments</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @payments.total_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Completed</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= Payment.where(status: :completed).count %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Pending</div>
      <div class="mt-1 text-3xl font-semibold text-yellow-600">
        <%= Payment.where(status: :pending).count %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Revenue</div>
      <div class="mt-1 text-2xl font-semibold text-indigo-600">
        <% total_revenue = Payment.where(status: :completed).sum(:amount) %>
        <%= number_to_currency(total_revenue, precision: 0) %>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <% if @payments.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Booking</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payments.each do |payment| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-lg bg-green-100 flex items-center justify-center">
                        <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to "Payment ##{payment.id}", payment, class: "hover:text-indigo-600" %>
                      </div>
                      <div class="text-sm text-gray-500">
                        ID: <%= payment.id %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= link_to payment.reference_number, payment.booking, class: "hover:text-indigo-600" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to payment.client_name, payment.client, class: "hover:text-indigo-600" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= number_to_currency(payment.amount, unit: payment.currency, precision: 0) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= payment.payment_method.titleize %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= payment.payment_date.strftime("%b %d, %Y") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case payment.status.to_s %>
                  <% when 'completed' %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-md">Completed</span>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-md">Pending</span>
                  <% when 'failed' %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-md">Failed</span>
                  <% when 'refunded' %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded-md">Refunded</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to "View", payment, class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Edit", edit_payment_path(payment), class: "text-gray-600 hover:text-gray-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @payments.total_pages > 1 %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <%= paginate @payments, theme: 'twitter-bootstrap-4',
            class: "flex justify-center" %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No payments found</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? || params[:status].present? %>
            Try adjusting your filters
          <% else %>
            Payments will appear here when bookings receive payments
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
