<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <%= link_to payments_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Payment #<%= @payment.id %></h1>
          <p class="mt-1 text-sm text-gray-500">
            Recorded on <%= @payment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <% case @payment.status.to_s %>
        <% when 'completed' %>
          <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium bg-green-100 text-green-800 rounded-md">Completed</span>
        <% when 'pending' %>
          <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium bg-yellow-100 text-yellow-800 rounded-md">Pending</span>
        <% when 'failed' %>
          <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium bg-red-100 text-red-800 rounded-md">Failed</span>
        <% when 'refunded' %>
          <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium bg-gray-100 text-gray-800 rounded-md">Refunded</span>
        <% end %>
        <%= link_to t('common.edit'), edit_payment_path(@payment), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Payment Details -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Payment Details</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div class="col-span-2 sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Amount</dt>
              <dd class="mt-1 text-3xl font-bold text-indigo-600">
                <%= number_to_currency(@payment.amount, unit: @payment.currency, precision: 0) %>
              </dd>
            </div>
            <div class="col-span-2 sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Payment Date</dt>
              <dd class="mt-1 text-lg font-semibold text-gray-900">
                <%= @payment.payment_date.strftime("%B %d, %Y") %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Payment Method</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= @payment.payment_method.titleize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Currency</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @payment.currency %></dd>
            </div>
            <div class="col-span-2">
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% case @payment.status.to_s %>
                <% when 'completed' %>
                  <div class="flex items-center text-green-700">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Payment completed successfully</span>
                  </div>
                <% when 'pending' %>
                  <div class="flex items-center text-yellow-700">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Payment is pending</span>
                  </div>
                <% when 'failed' %>
                  <div class="flex items-center text-red-700">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Payment failed</span>
                  </div>
                <% when 'refunded' %>
                  <div class="flex items-center text-gray-700">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Payment refunded</span>
                  </div>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Booking Information -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Related Booking</h3>
        </div>
        <div class="px-6 py-5">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <dl class="space-y-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Booking Reference</dt>
                  <dd class="mt-1">
                    <%= link_to @payment.booking.reference_number, @payment.booking, class: "text-lg font-semibold text-indigo-600 hover:text-indigo-700" %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Client</dt>
                  <dd class="mt-1">
                    <%= link_to @payment.client_name, @payment.client, class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Tour</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @payment.booking.tour_name %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Booking Total</dt>
                  <dd class="mt-1 text-sm font-semibold text-gray-900">
                    <%= number_to_currency(@payment.booking.total_amount, unit: @payment.booking.currency, precision: 0) %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Total Paid</dt>
                  <dd class="mt-1 text-sm font-semibold text-green-600">
                    <%= number_to_currency(@payment.booking.total_paid, unit: @payment.booking.currency, precision: 0) %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Outstanding Balance</dt>
                  <dd class="mt-1 text-sm font-semibold <%= @payment.booking.outstanding_balance > 0 ? 'text-red-600' : 'text-green-600' %>">
                    <%= number_to_currency(@payment.booking.outstanding_balance, unit: @payment.booking.currency, precision: 0) %>
                  </dd>
                </div>
              </dl>
            </div>
            <div class="ml-4">
              <%= link_to "View Booking", @payment.booking, class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Actions Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Actions</h3>
        </div>
        <div class="px-6 py-5 space-y-3">
          <%= link_to "Edit Payment", edit_payment_path(@payment), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>

          <%= link_to "View Booking", @payment.booking, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>

          <%= link_to "View Client", @payment.client, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>

          <%= link_to "All Payments", payments_path, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <!-- Payment Info Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Payment Info</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="space-y-3">
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Payment ID</dt>
              <dd class="mt-1 text-sm text-gray-900">#<%= @payment.id %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @payment.created_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @payment.updated_at.strftime("%b %d, %Y") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Payment Progress Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Booking Payment Progress</h3>
        </div>
        <div class="px-6 py-5">
          <div class="flex justify-between text-sm font-medium text-gray-700 mb-2">
            <span>Paid</span>
            <span><%= number_to_percentage((@payment.booking.total_paid.to_f / @payment.booking.total_amount * 100), precision: 0) %></span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
            <% payment_percentage = @payment.booking.total_amount > 0 ? ((@payment.booking.total_paid.to_f / @payment.booking.total_amount) * 100).round : 0 %>
            <div class="<%= @payment.booking.fully_paid? ? 'bg-green-600' : 'bg-blue-600' %> h-3 rounded-full transition-all duration-300" style="width: <%= [payment_percentage, 100].min %>%"></div>
          </div>
          <% if @payment.booking.fully_paid? %>
            <p class="text-sm font-semibold text-green-600">âœ“ Booking fully paid</p>
          <% else %>
            <p class="text-sm text-gray-600">
              <%= number_to_currency(@payment.booking.outstanding_balance, unit: @payment.booking.currency, precision: 0) %> remaining
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
