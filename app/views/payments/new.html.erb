<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to @booking, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Record Payment</h1>
        <p class="mt-1 text-sm text-gray-500">
          Add a new payment for <%= @booking.reference_number %>
        </p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="max-w-2xl">
    <%= render "form", payment: @payment, booking: @booking %>
  </div>
</div>
