<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between mb-6">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900">WhatsApp Channels</h1>
        <p class="mt-2 text-sm text-gray-700">
          Manage your WhatsApp channels connected to wazzup24. These channels are used to send and receive messages from customers.
        </p>
      </div>
      <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
        <%= link_to "â† Back to Settings", settings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= button_to "Refresh Channels", refresh_channels_settings_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>

    <% if @error %>
      <div class="mb-6 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Error loading channels</h3>
            <div class="mt-2 text-sm text-red-700">
              <p><%= @error %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Current Default Channel -->
    <% if @default_channel_id %>
      <div class="mb-6 bg-indigo-50 border border-indigo-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-indigo-800">Default Channel</h3>
            <div class="mt-2 text-sm text-indigo-700">
              <p>Channel ID: <code class="px-2 py-1 bg-indigo-100 rounded font-mono text-xs"><%= @default_channel_id %></code></p>
              <p class="mt-1 text-xs">This channel is configured in your Rails credentials and will be used by default for sending messages.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Active Channels -->
    <% if @active_channels.any? %>
      <div class="mb-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">
          Active Channels (<%= @active_channels.count %>)
        </h2>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <% @active_channels.each do |channel| %>
              <li>
                <div class="px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                          <svg class="h-6 w-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                          </svg>
                        </div>
                      </div>
                      <div class="ml-4">
                        <p class="text-sm font-medium text-indigo-600">
                          <%= channel[:transport].titleize %>
                        </p>
                        <p class="text-sm text-gray-900 font-semibold">
                          <%= channel[:plain_id] %>
                        </p>
                        <p class="text-xs text-gray-500 mt-1 font-mono">
                          <%= channel[:channel_id] %>
                        </p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-3">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= channel[:state_description] %>
                      </span>
                      <% if channel[:channel_id] == @default_channel_id %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                          Default
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <!-- All Channels (including inactive) -->
    <% if @channels.any? %>
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">
          All Channels (<%= @channels.count %>)
        </h2>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <% @channels.each do |channel| %>
              <li class="<%= channel[:active] ? '' : 'opacity-60' %>">
                <div class="px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="text-sm">
                        <p class="font-medium text-gray-900">
                          <%= channel[:transport].titleize %> - <%= channel[:plain_id] %>
                        </p>
                        <p class="text-xs text-gray-500 font-mono mt-1">
                          <%= channel[:channel_id] %>
                        </p>
                      </div>
                    </div>
                    <div>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= channel[:active] ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= channel[:state_description] %>
                      </span>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No channels found</h3>
        <p class="mt-1 text-sm text-gray-500">
          Connect a WhatsApp channel in wazzup24 to start sending messages.
        </p>
      </div>
    <% end %>

    <!-- Help Section -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">How to configure channels</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>To set a default channel for sending messages, add the channel ID to your Rails credentials:</p>
            <pre class="mt-2 p-2 bg-blue-100 rounded text-xs font-mono">wazzup24:
  api_key: your_api_key_here
  channel_id: your_channel_id_here</pre>
            <p class="mt-2">Run <code class="px-1 py-0.5 bg-blue-100 rounded">rails credentials:edit</code> to update.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
